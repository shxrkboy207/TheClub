@page
@model TheClub.Pages.ClienteCRUD.IncluirModel

@{
    ViewData["titulo"] = "Inclusao de Cliente";
}

<main class="container">
    <div class="row justify-content-center">
        <div class="class-sm-12">
        <h1>@ViewData["titulo"]</h1>
        <hr />

        <form method="post" class="mt-3">
            <div class="form-group">
                <label asp-for="Cliente.Nome" class="control-label"></label>
                <input asp-for="Cliente.Nome" class="form-control col-6" />
                <span asp-validation-for="Cliente.Nome" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Cliente.CPF" class="control-label"></label>
                <input asp-for="Cliente.CPF" class="form-control col-6" />
                <span asp-validation-for="Cliente.CPF" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Cliente.Email" class="control-label"></label>
                <input asp-for="Cliente.Email" class="form-control col-12" />
                <span asp-validation-for="Cliente.Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Cliente.DataDeNascimento" class="control-label"></label>
                <input asp-for="Cliente.DataDeNascimento" class="form-control col-6 type="date" />
                <span asp-validation-for="Cliente.DataDeNascimento" class="text-danger"></span>
            </div>
            <div class="form-group text-left">
                <a asp-page="./Listar" class="btn btn-info">Cancelar</a>
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
        </div>
    </div>
</main>
