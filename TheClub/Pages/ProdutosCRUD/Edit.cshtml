@page
@model TheClub.ProdutosCrud.EditModel

@{
    ViewData["Title"] = "Alterar Produto";
}

<h1>@ViewData["Title"]</h1>

<h4>Produto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Produto.iDProduto" />
            <div class="form-group">
                <label asp-for="Produto.iDNome" class="control-label"></label>
                <input asp-for="Produto.iDNome" class="form-control" />
                <span asp-validation-for="Produto.iDNome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Produto.Descricao" class="control-label"></label>
                <input asp-for="Produto.Descricao" class="form-control" />
                <span asp-validation-for="Produto.Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Produto.preco" class="control-label"></label>
                <input asp-for="Produto.preco" class="form-control" />
                <span asp-validation-for="Produto.preco" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Produto.estoque" class="control-label"></label>
                <input asp-for="Produto.estoque" class="form-control" />
                <span asp-validation-for="Produto.estoque" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
